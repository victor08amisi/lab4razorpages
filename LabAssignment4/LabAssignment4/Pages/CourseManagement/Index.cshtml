@page
@model LabAssignment4.Pages.CourseManagement.IndexModel

@{
    Layout = "_Layout"; // Ensure this points to your layout file
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].HoursPerWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].FeeBase)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Course) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursPerWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FeeBase)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Code">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Code">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Code">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
